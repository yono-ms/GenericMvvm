<UserControl
    x:Class="GenericMvvm.UWP.CustomTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GenericMvvm.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="root">
        <Border Style="{StaticResource BorderStyleContent}">
            <StackPanel>
                <ItemsControl x:Name="itemsControl" ItemTemplate="{StaticResource DataTemplateErrors}" IsTabStop="False"/>
                <TextBox x:Name="textBox" Header="{Binding Path=Text, RelativeSource={RelativeSource Mode=Self}}" TextChanged="textBox_TextChanged"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
