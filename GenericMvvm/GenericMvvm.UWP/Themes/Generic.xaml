<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GenericMvvm.UWP">

    <Style TargetType="local:ErrorTextBox" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ErrorTextBox">
                    <Border Style="{StaticResource BorderStyleContent}">
                        <StackPanel>
                            <ItemsControl ItemsSource="{TemplateBinding ItemsSource}" Style="{StaticResource }"/>
                            <TextBox Text="{TemplateBinding Text}" Header="{TemplateBinding Header}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
