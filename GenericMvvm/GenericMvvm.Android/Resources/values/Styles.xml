<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="AppTheme.Base"/>
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <!-- ここが有効になってない -->
    <item name="android:fragmentEnterTransition">@transition/enter_transition</item>
    <item name="android:fragmentExitTransition">@transition/exit_transition</item>
    <item name="android:fragmentReenterTransition">@transition/reenter_transition</item>
    <item name="android:fragmentReturnTransition">@transition/return_transition</item>
  </style>
</resources>